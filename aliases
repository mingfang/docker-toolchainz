alias fig='docker run -v /var/run/docker.sock:/run/docker.sock -v $PWD:/docker -w /docker --rm -it toolchainz fig'
alias java='docker run -v $PWD:/docker -w /docker --rm -it toolchainz java'
alias mvn='docker run -v $PWD:/docker -w /docker -v $HOME/.m2:/root/.m2 --rm -it toolchainz mvn'
alias activator='docker run -p 8888:8888 -v $PWD:/docker -w /docker -v $HOME/.activator:/root/.activator  -v $HOME/.ivy2:/root/.ivy2  -v $HOME/.sbt:/root/.sbt --rm -it toolchainz activator -Dhttp.address=0.0.0.0 '
alias sbt='docker run -v $PWD:/docker -w /docker -v $HOME/.ivy2:/root/.ivy2  -v $HOME/.sbt:/root/.sbt --rm -it toolchainz sbt'
alias gradle='docker run -v $PWD:/docker -w /docker -v $HOME/.gradle/caches:/root/.gradle/caches -v $HOME/.m2:/root/.m2 --rm -it toolchainz gradle'
alias http='docker run -v $PWD:/docker -w /docker --rm -it toolchainz http'
alias jq='docker run -v $PWD:/docker -w /docker --rm -it toolchainz jq'
